<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.exercizes.sanchellios.bananaqr">

    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.CodeListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.CaptureActivity"
                  android:clearTaskOnLaunch="true"
                  android:screenOrientation="portrait"
                  android:stateNotNeeded="true"
                  android:theme="@style/AppCompatCaptureTheme"
                  android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
        <provider
            android:authorities="com.exercizes.sanchellios.bananaqr"
            android:name=".model.UrlContentProvider"
            android:exported="false"/>
    </application>

</manifest>